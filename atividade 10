#include <iostream>
using namespace std;

// Função que troca os valores de duas variáveis
void troca(int &a, int &b) {
    int temp = a;
    a = b;
    b = temp;
}

int main() {
    int x, y;

    // Solicita ao usuário que insira dois valores inteiros
    cout << "Digite o primeiro valor inteiro: ";
    cin >> x;
    cout << "Digite o segundo valor inteiro: ";
    cin >> y;

    // Exibe os valores antes da troca
    cout << "Antes da troca:" << endl;
    cout << "Valor de x: " << x << endl;
    cout << "Valor de y: " << y << endl;

    // Chama a função para trocar os valores
    troca(x, y);

    // Exibe os valores depois da troca
    cout << "Depois da troca:" << endl;
    cout << "Valor de x: " << x << endl;
    cout << "Valor de y: " << y << endl;

    return 0;
}
